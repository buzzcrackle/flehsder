{
    "name": "Redshelf Downloader",
    "version": "1.0",
    "description": "Yoinkers!",
    "permissions": ["pageCapture", "tabs", "downloads", "webRequest", "*://platform.virdocs.com/*"],
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [
        {
          "matches": ["*://platform.virdocs.com/*"],
          "js": ["content.js"]
        }
      ],
    "browser_action": {
        "default_title": "Click Me"
    },
    "manifest_version": 2
}